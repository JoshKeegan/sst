<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.sst" path="/org/gnome/shell/extensions/sst/">
    <!-- Keyboard tiling keybinds -->
    <key name="tile-move-up-layer-0" type="as">
      <default><![CDATA[['<Super>Up']]]></default>
    </key>
    <key name="tile-move-down-layer-0" type="as">
      <default><![CDATA[['<Super>Down']]]></default>
    </key>
    <key name="tile-move-left-layer-0" type="as">
      <default><![CDATA[['<Super>Left']]]></default>
    </key>
    <key name="tile-move-right-layer-0" type="as">
      <default><![CDATA[['<Super>Right']]]></default>
    </key>
    <key name="tile-move-up-layer-1" type="as">
      <default><![CDATA[['<Super><Ctrl>Up', '<Super><Alt>Up']]]></default>
    </key>
    <key name="tile-move-down-layer-1" type="as">
      <default><![CDATA[['<Super><Ctrl>Down', '<Super><Alt>Down']]]></default>
    </key>
    <key name="tile-move-left-layer-1" type="as">
      <default><![CDATA[['<Super><Ctrl>Left', '<Super><Alt>Left']]]></default>
    </key>
    <key name="tile-move-right-layer-1" type="as">
      <default><![CDATA[['<Super><Ctrl>Right', '<Super><Alt>Right']]]></default>
    </key>
    <key name="tile-move-up-layer-2" type="as">
      <default><![CDATA[['<Super><Ctrl><Alt>Up']]]></default>
    </key>
    <key name="tile-move-down-layer-2" type="as">
      <default><![CDATA[['<Super><Ctrl><Alt>Down']]]></default>
    </key>
    <key name="tile-move-left-layer-2" type="as">
      <default><![CDATA[['<Super><Ctrl><Alt>Left']]]></default>
    </key>
    <key name="tile-move-right-layer-2" type="as">
      <default><![CDATA[['<Super><Ctrl><Alt>Right']]]></default>
    </key>
    
    <!-- Tile by default: whether Ctrl needs to be pressed to enable tiling by mouse movement -->
    <key name="tile-by-default" type="b">
      <default>true</default>
    </key>
  </schema>
</schemalist>